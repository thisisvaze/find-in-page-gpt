{
    "manifest_version": 3,
    "name": "Find in page GPT",
    "version": "0.1",
    "description": "Find information in the page using ChatGPT",
    "host_permissions": ["<all_urls>"],
    "permissions": [
      "activeTab","tabs",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }